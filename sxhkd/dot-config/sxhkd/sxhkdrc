#----------------------------- ~bspwmrc~ ------------------------------#
# ~terminal~ (super-return)
super + Return
	alacritty

super + shift  + Return
    tdrop -ma -w 50% -h 40% -y 30% -x 25% -s dropdown alacritty

# ~dmenu~ (super-space)
super + @space
    dmenu_run
# ~sxhkd|reload~ (super-escape)
super + Escape
	pkill -USR1 -x sxhkd

# ~.zshrc|reload~ (super-shift-z)
super + shift + z
	source $HOME/.config/zsh/.zshrc

# ~bspwm|reload~ (super-alt-r)
super + alt + r
	bspc wm -r

# ~logout~ (super-shift-x)
super + shift + x
    exec $HOME/scripts/menu/system

# ~lockscreen~ (super-x)
super + x
    betterlockscreen -s dim

# ~close|kill~ (super-q:quit, super-shift-q:kill)
super + {_,shift +}q
    bspc node -{c,k}

# ~window|state~ (super-t:tiling, super-shift-t:padding, super-f:fullscreen)
super + {t,p,g,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# ~node|focus~ (
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# ~node|tab~ (super-tab: next, super-shift-tab:previous)
super + {_,shift + }Tab
	bspc node -f {next,prev}.local

# ~spotify~
super + shift + m
    exec spotify

# ~desktop|change~
# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# ~preselect|destination~ (super-ctrl-h/j/k/l)
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# ~preselect|ratio~
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# ~preselect|cancel~ (super-ctrl-space)
super + ctrl + space
	bspc node -p cancel

# ~window|expand~ (super-alt-h/j/k/l)
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# ~firefox~ (super-w)
super + w
	firefox

# ~firefox|private~ (super + shift + p)
super + shift + p
    firefox --private-window

# ~lockscreen~ (super-x)
super + x
    sudo betterlockscreen -l -blur

# ~alsamixer~ (super-shift-a)
#super + shift + a
    $TERMINAL -e alsamixer

# ~ranger~ (super-r)
super + r
    $TERMINAL -e ranger

# ~imgur-screenshot~ (super-shift-i)
super + shift + i
    maim -s ~/Documents/Screenshots/$(date +%s).jpg

# ~xclip~ (super-ctrl-i)
super + ctrl + i
    maim -s | xclip -selection clipboard -t image/png

# ~volume~
XF86Audio{Lower,Raise}Volume
	pamixer --{decrease,increase} 5 && \
	pamixer --get-volume > $XOBPIPES/vol
XF86AudioMute
	pamixer --toggle-mute

# ~music~
super + control + a
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

super + control + s
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

super + control + d
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
